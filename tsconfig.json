{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "baseUrl": "./",
    "lib": ["es2015", "dom"],
    "types": [
      "lodash",
      "glob",
      "bluebird",
      "chalk"
    ]
  },
  "exclude": [
    "node_modules",
    "bower_components"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}